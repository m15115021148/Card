<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.geek.card.CustomZXingView
        android:id="@+id/zx_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:qrcv_animTime="1000"
        app:qrcv_borderColor="@android:color/transparent"
        app:qrcv_cornerColor="@color/gradient_end"
        app:qrcv_cornerLength="40dp"
        app:qrcv_cornerSize="5dp"
        app:qrcv_isScanLineReverse="true"
        app:qrcv_isShowDefaultGridScanLineDrawable="false"
        app:qrcv_maskColor="@color/gray_31_transparent"
        app:qrcv_rectWidth="300dp"
        app:qrcv_scanLineColor="@color/gradient_end">

    </com.geek.card.CustomZXingView>


</LinearLayout>